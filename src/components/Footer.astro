---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-twitter', url: '#' },
  { icon: 'fab fa-instagram', url: '#' },
  { icon: 'fab fa-discord', url: '#' },
  { icon: 'fab fa-youtube', url: '#' }
];
---

<footer class="bg-black text-white py-8 border-t border-red-700">
  <div class="container mx-auto px-4 text-center">
    <p class="text-red-600">&copy; {currentYear} Skulltubbies Unite. All rights reserved.</p>
    <div class="flex justify-center gap-6 mt-4">
      {socialLinks.map((link) => (
        <a href={link.url} class="text-white hover:text-red-500 transition-colors duration-300">
          <i class={link.icon}></i>
        </a>
      ))}
    </div>
  </div>
</footer>
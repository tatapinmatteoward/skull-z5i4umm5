---
// Frontmatter
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/merchandise', label: 'Merchandise' },
  { href: '/gallery', label: 'Gallery' },
  { href: '/members', label: 'Members' },
  { href: '/events', label: 'Events' }
];
---

<nav class="bg-white text-black shadow-lg">
  <div class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <a href="/" class="text-2xl font-bold tracking-wider">Skulltubbies Unite</a>
      
      <!-- Desktop Menu -->
      <div class="hidden md:flex gap-8">
        {navItems.map((item) => (
          <a 
            href={item.href} 
            class="hover:text-[#9e0000] transition-colors duration-300 uppercase text-sm tracking-wider"
          >
            {item.label}
          </a>
        ))}
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden text-black">
        <i class="fas fa-bars text-2xl"></i>
      </button>
    </div>
    
    <!-- Mobile Menu (hidden by default) -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 flex flex-col gap-4 pb-4">
      {navItems.map((item) => (
        <a 
          href={item.href} 
          class="hover:text-[#9e0000] transition-colors duration-300 uppercase text-sm tracking-wider py-2 border-b border-gray-200"
        >
          {item.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<!-- Client-side JavaScript for mobile toggle -->
<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
---
import Layout from '../layouts/Layout.astro';

const upcomingEvents = [
  {
    id: 1,
    title: "Halloween Haunt: Teletubbies Twilight",
    date: "October 31st, 2023",
    location: "Abandoned Teletubby Hill (Virtual Option Available)",
    description: "Join us for a midnight masquerade where Teletubbies costumes take a macabre twist.",
    activities: ["Costume contest", "Ghost hunts", "Teletubbies trivia with a horror spin"],
    ticketPrice: "$15 (includes eerie snacks)"
  }
];

const eventFeatures = [
  {
    icon: "fas fa-crown",
    title: "Historic Venues",
    description: "Events held in legendary locations with gothic architecture"
  },
  {
    icon: "fas fa-moon",
    title: "Dark Atmosphere",
    description: "Immersive experiences designed for the night owl"
  },
  {
    icon: "fas fa-users",
    title: "Community Focused",
    description: "Connect with fellow Teletubbies enthusiasts worldwide"
  }
];
---

<Layout title="Events" description="Discover upcoming spooky events and gatherings for Teletubbies fans embracing the gothic side. Unite in darkness with fellow enthusiasts.">
  <!-- Hero Section -->
  <div class="relative bg-gradient-to-br from-gray-900 to-black py-24 overflow-hidden">
    <div class="absolute inset-0 opacity-20">
      <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-transparent via-gray-900 to-black"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <div class="inline-block bg-[#9e0000] text-white px-4 py-1 rounded-full text-sm font-bold mb-4 animate-pulse">
          UPCOMING EVENTS
        </div>
        <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 leading-tight">
          <span class="block">SKULLTUBBIES</span>
          <span class="block text-[#9e0000] mt-2">UNITE</span>
        </h1>
        <p class="text-xl text-gray-300 mb-10 max-w-2xl mx-auto">
          Uniting Teletubbies Fans in a Spooky Embrace
        </p>
        <div class="flex justify-center space-x-4">
          <div class="w-3 h-3 bg-[#9e0000] rounded-full animate-bounce"></div>
          <div class="w-3 h-3 bg-[#9e0000] rounded-full animate-bounce" style="animation-delay: 0.2s"></div>
          <div class="w-3 h-3 bg-[#9e0000] rounded-full animate-bounce" style="animation-delay: 0.4s"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Upcoming Events Section -->
  <section class="py-20 bg-gray-900">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-white mb-4">Upcoming Events</h2>
        <p class="text-gray-400 max-w-2xl mx-auto">
          Dive into the shadowy world of Skulltubbies Unite with our handpicked events that blend Teletubbies nostalgia with gothic chills.
        </p>
      </div>

      <div class="max-w-4xl mx-auto">
        {upcomingEvents.map((event) => (
          <div class="bg-gradient-to-r from-gray-800 to-gray-900 border border-[#9e0000] rounded-xl p-8 mb-10 transform hover:scale-[1.01] transition-all duration-300 shadow-2xl">
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
              <div>
                <h3 class="text-2xl font-bold text-white mb-2">{event.title}</h3>
                <div class="flex items-center text-gray-300 mb-2">
                  <i class="fas fa-calendar-alt mr-2 text-[#9e0000]"></i>
                  <span>{event.date}</span>
                </div>
                <div class="flex items-center text-gray-300">
                  <i class="fas fa-map-marker-alt mr-2 text-[#9e0000]"></i>
                  <span>{event.location}</span>
                </div>
              </div>
              <div class="mt-4 md:mt-0">
                <span class="bg-[#9e0000] text-white px-4 py-2 rounded-lg font-bold">{event.ticketPrice}</span>
              </div>
            </div>
            
            <p class="text-gray-300 mb-6">{event.description}</p>
            
            <div class="mb-6">
              <h4 class="text-lg font-bold text-white mb-3 flex items-center">
                <i class="fas fa-star text-[#9e0000] mr-2"></i>
                Activities
              </h4>
              <ul class="grid grid-cols-1 md:grid-cols-3 gap-3">
                {event.activities.map((activity, index) => (
                  <li class="flex items-center text-gray-300 bg-gray-700/50 p-3 rounded-lg">
                    <i class="fas fa-cog text-[#9e0000] mr-2"></i>
                    <span>{activity}</span>
                  </li>
                ))}
              </ul>
            </div>
            
            <div class="flex justify-center">
              <button class="bg-[#9e0000] hover:bg-red-900 text-white font-bold py-3 px-8 rounded-full transition duration-300 transform hover:scale-105">
                Get Tickets
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-black">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-white mb-4">Why Join Skulltubbies Unite?</h2>
        <p class="text-gray-400 max-w-2xl mx-auto">
          Experience the perfect fusion of classic childhood memories and gothic atmosphere
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {eventFeatures.map((feature, index) => (
          <div 
            class="bg-gradient-to-br from-gray-900 to-black border border-gray-800 rounded-xl p-8 hover:border-[#9e0000] transition-all duration-300 transform hover:-translate-y-2"
            key={index}
          >
            <div class="w-16 h-16 bg-[#9e0000] rounded-full flex items-center justify-center mb-6">
              <i class={`${feature.icon} text-white text-2xl`}></i>
            </div>
            <h3 class="text-xl font-bold text-white mb-3">{feature.title}</h3>
            <p class="text-gray-400">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-[#9e0000] to-red-900">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl font-bold text-white mb-6">Ready to Embrace the Gothic?</h2>
      <p class="text-xl text-gray-100 max-w-2xl mx-auto mb-10">
        Join our community of Teletubbies enthusiasts who celebrate the darkness
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <button class="bg-white text-[#9e0000] hover:bg-gray-100 font-bold py-3 px-8 rounded-full transition duration-300">
          Become a Member
        </button>
        <button class="bg-transparent border-2 border-white text-white hover:bg-white/10 font-bold py-3 px-8 rounded-full transition duration-300">
          View Calendar
        </button>
      </div>
    </div>
  </section>

  <!-- Footer Section -->
  <footer class="py-12 bg-gray-900 border-t border-gray-800">
    <div class="container mx-auto px-4 text-center">
      <p class="text-gray-500">
        Â© {new Date().getFullYear()} Skulltubbies Unite. Uniting Teletubbies Fans in a Spooky Embrace.
      </p>
    </div>
  </footer>
</Layout>